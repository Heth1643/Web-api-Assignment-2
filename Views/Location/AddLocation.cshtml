@model Assignment2model.Location
@{
    ViewData["Title"] = "AddLocation";
}

@using (Html.BeginForm("AddLocation","Location",FormMethod.Post))
{
    <h2>Add Location Details</h2>
    <hr>
 <table>
    <tr>
        <th>Location ID</th>
        <td>@Html.TextBoxFor(x=>x.Lid)</td>

    </tr>
     <tr>
        <th>Building ID</th>
        <td>@Html.TextBoxFor(x=>x.Bid)</td>
        
    </tr>
     <tr>
        <th>Address</th>
        <td>@Html.TextAreaFor(x=>x.Address)</td>
        
    </tr>
     <tr>
        <th>Zipcode</th>
        <td>@Html.TextBoxFor(x=>x.Zipcode)</td>
        
    </tr>
     <tr>
        <th>Manager Name</th>
        <td><select asp-for="Managername" asp-items="@(new SelectList(@ViewBag.emp,"Fname","Fname"))">

            </select></td>
        
    </tr>
    <tr>
        <td><button type="submit" class="btn btn-primary">Save</button>
        <button type="reset" class="btn btn-danger"  onclick="history.go(-1)">Cancel</button></td>
    </tr>
    
 </table>



}